<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/bulletin_profile_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:cropToPadding="false"
            android:src="@drawable/ic_profile_foreground"
            />
        <TextView
            android:id="@+id/bulletin_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="NickName"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/bulletin_post_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:layout_gravity="right"/>
    </LinearLayout>
    <TextView
        android:id="@+id/bulletin_main_title"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:padding="20dp"
        android:id="@+id/bulletin_main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:cropToPadding="false" />
</LinearLayout>