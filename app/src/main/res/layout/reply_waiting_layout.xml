<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:background="#44000000"
    >
    <TextView
        android:id="@+id/waiting_reply_date"
        android:layout_weight="3"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="7dp"
        />
    <TextView
        android:id="@+id/waiting_reply_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/waiting_reply_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/waiting_reply_reliability"
        android:textSize="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/waiting_reply_allow_btn"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:text="allow"/>
    <Button
        android:id="@+id/waiting_reply_deny_btn"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:text="deny"/>

</LinearLayout>