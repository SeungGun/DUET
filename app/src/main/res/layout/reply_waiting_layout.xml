<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     android:background="#eeeeee"
    android:padding="6dp"
    android:gravity="center_vertical"
    >
    <TextView
        android:id="@+id/waiting_reply_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:gravity="center"
        android:layout_weight="0.25"
        android:id="@+id/waiting_reply_level"
        android:layout_width="wrap_content"
        android:textSize="17dp"
        android:textColor="#0000ff"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/waiting_reply_nickname"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:paddingRight="5dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="0.5"
        android:id="@+id/waiting_reply_reliability"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/waiting_reply_allow_btn"
        android:layout_weight="1.6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="수락"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_radius"
        />
    <Button
        android:id="@+id/waiting_reply_deny_btn"
        android:layout_weight="1.6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="거절"
        android:background="@drawable/button_radius"/>

    </LinearLayout>
</LinearLayout>