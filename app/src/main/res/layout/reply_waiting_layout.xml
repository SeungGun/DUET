<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:background="#aaaaaa"
    android:padding="8dp"
    >
    <TextView
        android:id="@+id/waiting_reply_date"
        android:layout_weight="2.7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="7dp"
        />
    <TextView
        android:layout_weight="0.8"
        android:id="@+id/waiting_reply_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="2.3"
        android:id="@+id/waiting_reply_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/waiting_reply_reliability"
        android:textSize="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/waiting_reply_allow_btn"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:text="수락"
        android:layout_marginRight="15dp"
        />
    <Button
        android:id="@+id/waiting_reply_deny_btn"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:text="거절"/>

</LinearLayout>