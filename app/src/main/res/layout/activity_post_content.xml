<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board.PostContentActivity"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_weight="8.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:id="@+id/content_user_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:cropToPadding="false"
                    android:src="@drawable/ic_profile_foreground"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="30dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/content_title"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#bfbebe"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/content_profile_nickname"
                        android:text="NickName"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <TextView
                android:id="@+id/content_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/content_write_date"
                android:textSize="16dp"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="group join"
                android:id="@+id/joinBtn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:background="@drawable/button_radius"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/purple_200"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reply_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/reply_container"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>